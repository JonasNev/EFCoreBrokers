@model EFCoreBrokers.Dtos.CompanyCreate
<link href="D:\Programavimas\NTBrokers\NTBrokers\Content\Chosen\chosen.min.css" rel="stylesheet" />
<h2>Add a company</h2>

@using (Html.BeginForm("Edit", "Company", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Company.Name, "Name")
        @Html.TextBoxFor(c => c.Company.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Company.City, "City")
        @Html.TextBoxFor(c => c.Company.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Company.Street, "Street")
        @Html.TextBoxFor(c => c.Company.Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Company.Number, "No.")
        @Html.TextBoxFor(c => c.Company.Number, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Brokers" class="control-label">Brokers</label>
        <div>
            @*MultiSelect Dropdown*@
            @Html.ListBoxFor(model => model.BrokerIds, new MultiSelectList(@Model.Brokers, "Id", "Name"), new { id = "multiSelectDropDown", multiple = "multiple", style = "width:250px" })
        </div>
    </div>
    @Html.HiddenFor(c => c.Company.Id)
    <button type="submit" class="btn btn-primary">Add</button>
    @Html.ActionLink("Cancel", "Index", "Company", null, new { @class = "btn btn-secondary" })
}

@section scripts {
    <script>
        $("#multiSelectDropDown").chosen();
    </script>
}
